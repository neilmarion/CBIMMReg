<!DOCTYPE html>
<html>
  <head>
    <title>CbimmregP</title>
      <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="header">
    <% if @user %>
      <%= link_to "Home", root_path, :class => "header_link" %>
      <%= link_to "Edit Account", edit_user_path('account'), :class => "header_link" %> -
      <%= link_to "Logout", @application_session, :method => :delete, :class => "header_link" %>
    <% else %>
      <%= render 'sessions/new' %>
    <% end %>
    </div>

  <%= yield %>
  </body>
</html>
